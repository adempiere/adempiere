<%@ taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c" %><%@ taglib uri="http://www.zkoss.org/dsp/zk/core" prefix="z" %><%@ taglib uri="http://www.zkoss.org/dsp/web/theme" prefix="t" %>.z-button{font-family:"Helvetica Neue",Helvetica,Arial,sans-serif;font-size:12px;font-weight:normal;font-style:normal;color:#000;min-height:24px;border:1px solid #a9a9a9;${t:borderRadius('4px') };padding:3px 12px;line-height:14px;${t:gradient('ver','#fefefe 0%; #eeeeee 100%') };text-shadow:0 1px #fff;cursor:pointer;white-space:nowrap}.z-button:hover{border-color:#6aacd3;${t:gradient('ver','#e1eef6 0%; #ceecfd 100%') }}.z-button:focus{color:#000;border-color:#449ed3;${t:gradient('ver','#fefefe 0%; #eeeeee 100%') };${t:boxShadow('inset 0 0 2px #0CBCFF') }}.z-button:active{border-color:#449ed3;${t:gradient('ver','#ceecfd 0%; #6aacd3 100%') }}.z-button[disabled]{border-color:#a9a9a9;${t:gradient('ver','#fefefe 0%; #eeeeee 100%') };opacity:.6;filter:alpha(opacity=60);${t:boxShadow('none') };cursor:default}.z-button img{vertical-align:middle}.ie8 .z-button{min-height:16px}